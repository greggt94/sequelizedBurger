<h2>Add a Burger</h2>
<form class="create-form" action="/">
  <div class="form-group">
    <label>Burger Name:</label>
    <input type="text" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<div class="container">
  <div class="row">
    <div class="col-xs-6 burger-list">
      <hr>
      <label>Burgers</label>
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            <label>{{burger_name}}</label>
            <form class="update-form" action="/">
              <input type="hidden" name="devoured" value="1">
              <button type="submit">Devour It!</button>
            </form>
          </li>
        {{/unless}}
        {{/each}}
    </ul>
    </div>

    <div class="col-xs-6 devoured-burgers">
      <hr>
      <label>Devoured Burgers</label>
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
          <li>
            <label>{{burger_name}}</label>
          </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

